<odoo>
    <record id="view_patient_wizard_form" model="ir.ui.view">
        <field name="name">hospital.patient.wizard.form</field>
        <field name="model">hospital.wizard</field>
        <field name="arch" type="xml">
            <form string="Patient Wizard">
                <group>
                    <field name="followup_date"/>
                    <field name="note"/>
                </group>
                <footer>
                    <button name="action_apply" type="object" string="Apply" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_patient_wizard" model="ir.actions.act_window">
        <field name="name">Add Patient Note</field>
        <field name="res_model">hospital.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
