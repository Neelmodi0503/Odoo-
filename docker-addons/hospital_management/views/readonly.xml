<?xml  version ="1.0" encoding="UTF-8"?>
<odoo>

    <record id ="view_hospital_patient_readonly_tree" model="ir.ui.view">
        <field name="name">hospital.patient.readonly.tree</field>
        <field name="model">hospital.patient</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="Patients" create="0" delete="0" edit="0">
                <field name="name"/>
                <field name="age"/>
                <field name="date_of_birth" optional="show"/>
                <field name="gender" optional="hide"/>
            </tree>
        </field>
    </record>


    <record id="view_hospital_patient_readonly_kanban" model="ir.ui.view">
        <field name="name">hospital.patient.readonly.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <div>Age: <field name="age"/>
                            </div>
                            <div>gender: <field name="gender"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id ="view_hospital_patient_readonly_form" model="ir.ui.view">
        <field name="name">hospital.patient.readonly.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient Form" create="0" delete="0" edit="0">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                    </group>
                    <group>
                        <field name="date_of_birth" optional="show"/>
                        <field name="gender"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>

            </form>
        </field>
    </record>



    <record id="action_hospital_readonly_patient" model="ir.actions.act_window">
        <field name="name">View Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_ids" eval="[Command.clear(),
        (0,0,{
            'view_mode':'tree',
            'view_id':ref('view_hospital_patient_readonly_tree')
        }),
        (0,0,{
            'view_mode':'form',
            'view_id':ref('view_hospital_patient_readonly_form')
        }),
        (0,0,
            {'view_mode':'kanban',
            'view_id':ref('view_hospital_patient_readonly_kanban')})
    ]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create your first patient
            </p>
        </field>
    </record>


</odoo>
            