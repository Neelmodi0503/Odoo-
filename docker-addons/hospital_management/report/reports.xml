<odoo>
    <template id="report_patient">
        <t t-call="web.external_layout">
            <main>
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <h2 class = "report-title" style="text-align: center">
                        Patient Report </h2>
                        <p>
                            <strong> Name :- </strong>
                            <t t-esc='o.name' />
                            <br/>
                            <strong> Age :- </strong>
                            <t t-esc="o.age" />
                            <br/>
                            <strong> Date Of Birth:- </strong>
                            <t t-esc='o.date_of_birth' />
                            <br/>
                        </p>

                    </div>


                    <div>
                        <h2 class="selection-title" style="text-align : center"> Shipping Details </h2>
                        <table class="table-bordered" style="border-collapse: collapse; width: 100%;">
                            <tr>
                                <th style="border: 1px solid black; padding: 5px;"> Shipping Price </th>
                                <th style="border: 1px solid black; padding: 5px;"> Tracking Id </th>
                                <th style="border: 1px solid black; padding: 5px;"> Status </th>
                            </tr>

                            <tr>
                                <td style="border: 1px solid black; padding: 5px;">
                                    <t t-esc="o.shipping_price" />
                                </td>

                                <td style="border: 1px solid black; padding: 5px;">
                                    <t t-esc= "o.tracking_number" />
                                </td>
                                <td style="border: 1px solid black; padding: 5px;">
                                    <t t-esc="o.shipping_status" />

                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
                <div class= "d-flex justify-content-space-between" style="margin-top: 30px;">

                    <footer class="footer">

                        <strong>Generated By:</strong>
                        <t t-esc="user.name"/>
                        <strong>Generated On:</strong>
                        <t t-esc="time.strftime('%d-%m-%Y %H:%M:%S')"/>

                    </footer>
                </div>
            </main>
        </t>
    </template>

                        <!--  Patien Report Action  -->

    <record id="action_patient_report" model="ir.actions.report">
        <field name="name">Patient Report</field>
        <field name="model">hospital.patient</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hospital_management.report_patient</field>
        <field name="binding_model_id" ref="model_hospital_patient"/>
        <field name="binding_type">report</field>
    </record>



                            <!--XLSX Report -->


    <record id = "action_patient_report_xlsx" model="ir.actions.report">
        <field name = "name"> XlSX Report </field>
        <field name = "model">hospital.patient</field>
        <field name = "report_type">xlsx</field>
        <field name = "report_name">hospital_management.patient_report_xlsx</field>
        <field name = "binding_model_id" ref = "model_hospital_patient" />
        <field name = "binding_type">report</field>
    </record>


                <!--   Xlsx Report in Inventory-->


    <record id = "action_report_indate" model= "ir.actions.report">
            <field name= "name"> XLSX report</field>
            <field name='model'>stock.quant</field>
            <field name="report_type">xlsx</field>
            <field name = "report_name">hospital_management.inventory_stock_xlsx</field>


            <field name = "binding_type">report</field>
    </record>

    
