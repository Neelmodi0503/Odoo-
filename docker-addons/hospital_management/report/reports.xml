<odoo>
    <template id="report_patient">
        <t t-call="web.external_layout">
            <main>
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <h2 class="report-title" style="text-align : center" >Patient Report</h2>
                        <p>
                            <strong>Name :- </strong>
                            <t t-esc="o.name"/>
                        </p>
                        <p>
                            <strong>Age :- </strong>
                            <t t-esc="o.age"/>
                        </p>
                        <p>
                            <strong>Date of Birth :- </strong>
                            <t t-esc="o.date_of_birth"/>
                        </p>
                    </div>

                    <div>
                        <h2 class="section-title">Shipping Details</h2>
                        <table class="report-table">
                            <tr>
                                <th>Tracking Id</th>
                                <td>
                                    <t t-esc="o.tracking_number"/>
                                </td>
                            </tr>
                            <tr>
                                <th>Shipping Price</th>
                                <td>
                                    <t t-esc="o.shipping_price"/>
                                </td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>
                                    <t t-esc="o.shipping_status"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>

                <footer class="footer">
                    <p>
                        <strong>Generated By:</strong>
                        <t t-esc="user.name"/>
                    </p>
                    <p>
                        <strong>Generated On:</strong>
                        <t t-esc="time.strftime('%d-%m-%Y %H:%M:%S')"/>
                    </p>
                </footer>
            </main>
        </t>
    </template>

    <record id="action_patient_report" model="ir.actions.report">
        <field name="name">Patient Report</field>
        <field name="model">hospital.patient</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hospital_management.report_patient</field>
        <field name="binding_model_id" ref="model_hospital_patient"/>
        <field name="binding_type">report</field>
    </record>


    <!-- using xpath to customize report -->

    <template id = "sale_order_pdf" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@class='row']" position="before">
            <div class = 'col-12' style="color:red;">
                <strong>*** This is a test change in PDF ***</strong>
            </div>
        </xpath>
    </template>


    <template id="product_xpath" inherit_id="product.report_pricelist" >
    <xpath expr="//div[@class='page']" position="after">
    <p style="text-align : center">Date: <t t-esc="time.strftime('%d-%m-%Y')"/>
    </p>
</xpath>    

    </template>


    <template id="rfq_xpath" inherit_id="purchase.report_purchasequotation_document">
    <xpath expr="//p[@t-field='o.notes']" position="after">
    <p style="text-align : center"> email@gmail.com </p>
    </xpath>
    </template>


</odoo>
